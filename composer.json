{
    "name": "amoracr/yii2-backup",
    "description": "Component for creating backups of Yii2 sites.",
    "type": "yii2-extension",
    "keywords": [
        "yii2",
        "backup",
        "dump"
    ],
    "homepage": "https://github.com/amoracr/yii2-backup",
    "license": "MIT",
    "authors": [
        {
            "name": "Alonso Mora",
            "email": "adelfunscr@gmail.com",
            "role": "Creator"
        }
    ],
    "support": {
        "issues": "https://github.com/amoracr/yii2-backup/issues",
        "source": "https://github.com/amoracr/yii2-backup"
    },
    "require": {
        "php": ">=5.6.0",
        "ext-phar": "*",
        "ext-pdo": "*",
        "yiisoft/yii2": "~2.0.0"
    },
    "suggest": {
        "ext-mysqli": "Need for MySQL, MariaDB databases.",
        "ext-sqlite3": "Need for SQLite databases.",
        "ext-bz2": "Need for using bzip2 compression.",
        "ext-zip": "Need for using zip compression.",
        "ext-zlib": "Need for using gzip compression."
    },
    "autoload": {
        "psr-4": {
            "amoracr\\backup\\": "src"
        }
    }
}
